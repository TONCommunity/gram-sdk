{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "scripthost"
    ],    
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",  
    "composite": true,
    "sourceMap":true,
    "noImplicitAny": false,
    "declarationMap": true,     
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "**/node_modules",
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue",
    "./tests/**/*.ts",
    "./tests/**/*.tsx",
  ],  
}

